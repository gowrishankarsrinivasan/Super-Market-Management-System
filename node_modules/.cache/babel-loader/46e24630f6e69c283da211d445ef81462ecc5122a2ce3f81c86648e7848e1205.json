{"ast":null,"code":"import NavigationComponent from './NavigationComponent.vue';\nimport img1 from '../assets/Home/p1.jpg';\nimport img2 from '../assets/Home/p2.jpg';\nexport default {\n  components: {\n    NavigationComponent\n  },\n  data() {\n    return {\n      posts: [{\n        id: 1,\n        title: 'How to Choose the Perfect Product for Your Needs',\n        date: '2024-08-16',\n        summary: 'Discover tips and tricks for selecting the best products tailored to your needs in our comprehensive guide.',\n        coverImage: img1,\n        category: 'Tips & Tricks',\n        liked: false\n      }, {\n        id: 2,\n        title: 'Top 10 Products for Summer 2024',\n        date: '2024-08-17',\n        summary: 'Explore our curated list of top products that will make your summer of 2024 unforgettable.',\n        coverImage: img2,\n        category: 'Product Reviews',\n        liked: false\n      }\n\n      // Add more posts here\n      ]\n    };\n  },\n  methods: {\n    formattedDate(dateString) {\n      const options = {\n        year: 'numeric',\n        month: 'long',\n        day: 'numeric'\n      };\n      return new Date(dateString).toLocaleDateString(undefined, options);\n    },\n    likePost(id) {\n      const post = this.posts.find(post => post.id === id);\n      if (post) {\n        post.liked = !post.liked;\n      }\n    }\n  }\n};","map":{"version":3,"names":["NavigationComponent","img1","img2","components","data","posts","id","title","date","summary","coverImage","category","liked","methods","formattedDate","dateString","options","year","month","day","Date","toLocaleDateString","undefined","likePost","post","find"],"sources":["D:\\E-commerce\\FrontEnd\\my-vue3-project\\src\\components\\BlogComponent.vue"],"sourcesContent":["<template>\r\n    <NavigationComponent/>\r\n    <v-container>\r\n      <v-row>\r\n        <v-col v-for=\"post in posts\" :key=\"post.id\" cols=\"12\" md=\"6\" lg=\"4\">\r\n          <v-card class=\"blog-card\">\r\n            <v-img :src=\"post.coverImage\" height=\"250px\" class=\"blog-cover\"></v-img>\r\n            <v-card-title class=\"headline\">{{ post.title }}</v-card-title>\r\n            <v-card-subtitle class=\"subheading\">{{ formattedDate(post.date) }}</v-card-subtitle>\r\n            <v-card-text>\r\n              <v-chip color=\"primary\" text-color=\"white\" class=\"mb-2\">{{ post.category }}</v-chip>\r\n              <p>{{ post.summary }}</p>\r\n            </v-card-text>\r\n            <v-card-actions>\r\n              <v-btn :to=\"`/blog/${post.id}`\" color=\"primary\" text>Read More</v-btn>\r\n              <v-btn icon @click=\"likePost(post.id)\">\r\n                <v-icon>{{ post.liked ? 'mdi-heart' : 'mdi-heart-outline' }}</v-icon>\r\n              </v-btn>\r\n            </v-card-actions>\r\n          </v-card>\r\n        </v-col>\r\n      </v-row>\r\n    </v-container>\r\n  </template>\r\n  \r\n  <script>\r\n    import NavigationComponent from './NavigationComponent.vue';\r\n    import img1 from '../assets/Home/p1.jpg';\r\n    import img2 from '../assets/Home/p2.jpg';\r\n\r\n  export default {\r\n    components:{\r\n        NavigationComponent\r\n    },\r\n    data() {\r\n      return {\r\n        posts: [\r\n          {\r\n            id: 1,\r\n            title: 'How to Choose the Perfect Product for Your Needs',\r\n            date: '2024-08-16',\r\n            summary: 'Discover tips and tricks for selecting the best products tailored to your needs in our comprehensive guide.',\r\n            coverImage: img1,\r\n            category: 'Tips & Tricks',\r\n            liked: false,\r\n          },\r\n          {\r\n            id: 2,\r\n            title: 'Top 10 Products for Summer 2024',\r\n            date: '2024-08-17',\r\n            summary: 'Explore our curated list of top products that will make your summer of 2024 unforgettable.',\r\n            coverImage: img2,\r\n            category: 'Product Reviews',\r\n            liked: false,\r\n          },\r\n\r\n          // Add more posts here\r\n        ],\r\n      };\r\n    },\r\n    methods: {\r\n      formattedDate(dateString) {\r\n        const options = { year: 'numeric', month: 'long', day: 'numeric' };\r\n        return new Date(dateString).toLocaleDateString(undefined, options);\r\n      },\r\n      likePost(id) {\r\n        const post = this.posts.find(post => post.id === id);\r\n        if (post) {\r\n          post.liked = !post.liked;\r\n        }\r\n      },\r\n    },\r\n  };\r\n  </script>\r\n  \r\n  <style scoped>\r\n  .blog-card {\r\n    transition: transform 0.3s ease, box-shadow 0.3s ease;\r\n    cursor: pointer;\r\n  }\r\n  \r\n  .blog-card:hover {\r\n    transform: translateY(-5px);\r\n    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);\r\n  }\r\n  \r\n  .blog-cover {\r\n    border-radius: 4px;\r\n  }\r\n  \r\n  .v-card-title {\r\n    font-weight: bold;\r\n  }\r\n  \r\n  .v-card-subtitle {\r\n    color: #6c757d;\r\n  }\r\n  \r\n  .v-card-text {\r\n    margin-bottom: 16px;\r\n  }\r\n  \r\n  .v-chip {\r\n    margin-right: 8px;\r\n  }\r\n  </style>\r\n  "],"mappings":"AA0BI,OAAOA,mBAAkB,MAAO,2BAA2B;AAC3D,OAAOC,IAAG,MAAO,uBAAuB;AACxC,OAAOC,IAAG,MAAO,uBAAuB;AAE1C,eAAe;EACbC,UAAU,EAAC;IACPH;EACJ,CAAC;EACDI,IAAIA,CAAA,EAAG;IACL,OAAO;MACLC,KAAK,EAAE,CACL;QACEC,EAAE,EAAE,CAAC;QACLC,KAAK,EAAE,kDAAkD;QACzDC,IAAI,EAAE,YAAY;QAClBC,OAAO,EAAE,6GAA6G;QACtHC,UAAU,EAAET,IAAI;QAChBU,QAAQ,EAAE,eAAe;QACzBC,KAAK,EAAE;MACT,CAAC,EACD;QACEN,EAAE,EAAE,CAAC;QACLC,KAAK,EAAE,iCAAiC;QACxCC,IAAI,EAAE,YAAY;QAClBC,OAAO,EAAE,4FAA4F;QACrGC,UAAU,EAAER,IAAI;QAChBS,QAAQ,EAAE,iBAAiB;QAC3BC,KAAK,EAAE;MACT;;MAEA;MAAA;IAEJ,CAAC;EACH,CAAC;EACDC,OAAO,EAAE;IACPC,aAAaA,CAACC,UAAU,EAAE;MACxB,MAAMC,OAAM,GAAI;QAAEC,IAAI,EAAE,SAAS;QAAEC,KAAK,EAAE,MAAM;QAAEC,GAAG,EAAE;MAAU,CAAC;MAClE,OAAO,IAAIC,IAAI,CAACL,UAAU,CAAC,CAACM,kBAAkB,CAACC,SAAS,EAAEN,OAAO,CAAC;IACpE,CAAC;IACDO,QAAQA,CAACjB,EAAE,EAAE;MACX,MAAMkB,IAAG,GAAI,IAAI,CAACnB,KAAK,CAACoB,IAAI,CAACD,IAAG,IAAKA,IAAI,CAAClB,EAAC,KAAMA,EAAE,CAAC;MACpD,IA